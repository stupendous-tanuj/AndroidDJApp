<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.djapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.app.djapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.djapp.SecondActivity_FX"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.app.djapp.ThirtdActivity_MIXER"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.app.djapp.TabPagerActivity" >
        </activity>
        <activity android:name="com.app.djapp.RecordFileActivity" >
        </activity>

        <service android:name="com.app.djapp.RecordService" >
        </service>
    </application>

</manifest>