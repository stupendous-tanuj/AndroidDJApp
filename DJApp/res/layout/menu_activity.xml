<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:layout_width="@dimen/dp_wt_menu_logo"
            android:layout_height="@dimen/dp_wt_menu_logo"
            android:background="@drawable/image12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bt_menu_mixing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_ht_menu_button"
            android:background="@drawable/image13"
            android:text="Mixing"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_menu_buttontext" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_ht_menu_button"
            android:background="@drawable/image13"
            android:text="Settings"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_menu_buttontext" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_ht_menu_button"
            android:background="@drawable/image13"
            android:text="My Set"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_menu_buttontext" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_ht_menu_button"
            android:background="@drawable/image13"
            android:text="Store"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_menu_buttontext" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_ht_menu_button"
            android:background="@drawable/image13"
            android:text="About"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_menu_buttontext" />
    </LinearLayout>

</LinearLayout>